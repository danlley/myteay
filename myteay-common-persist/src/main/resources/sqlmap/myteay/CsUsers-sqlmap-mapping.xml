    <!-- result maps for database table core_channel_strategy_info -->
    <resultMap id="RM-USERS-INFO" class="com.myteay.common.dal.dataobject.UsersInfoDO">
        <result property="id" column="id" javaType="java.lang.String" jdbcType="bigint"/>
        <result property="userId" column="userid" javaType="java.lang.String" jdbcType="varchar"/>
        <result property="userName" column="username" javaType="java.lang.String" jdbcType="varchar"/>
        <result property="nickName" column="nickname" javaType="java.lang.String" jdbcType="varchar"/>
        <result property="checkedFlag" column="checked_flag" javaType="java.lang.String" jdbcType="varchar"/>
        <result property="qrCode" column="qr_code" javaType="java.lang.String" jdbcType="varchar"/>
        <result property="gmtCreated" column="gmt_created" javaType="java.util.Date" jdbcType="datetime"/>
        <result property="gmtModified" column="gmt_modified" javaType="java.util.Date" jdbcType="datetime"/>
    </resultMap>


    <!-- ============================================= -->
    <!-- mapped statements for IbatisUsersInfoDAO -->
    <!-- ============================================= -->
    <!-- mapped statement for IbatisUsersInfoDAO.insert -->
    <insert id="MS-USER-INFO-INSERT">
		insert into customers.users (userid,username,nickname,qr_code,checked_flag,gmt_created,gmt_modified) 
			values (#userId#,#userName#,#nickName#,#qrCode#,#checkedFlag#,now(),now());
			  <selectKey resultClass="java.lang.String" keyProperty="id">  
			    SELECT LAST_INSERT_ID()  
			  </selectKey>
    </insert>

    <select id="MS-MT-USER-INFO-GET-BY-ID" resultMap="RM-USERS-INFO">
	    <![CDATA[
	        select id,userid,username,nickname,qr_code,checked_flag,gmt_created,gmt_modified from customers.users where (userid = #value#)
	    ]]>
    </select>

    <update id="MS-MT-USER-UPDATE-QRCODE-BY-USERID">
        update customers.users 
			set
				qr_code = #qrCode#,
				gmt_modified = now()
			where
				(userid = #userId#)
    </update>
